@using Case2.MaRoWo.GarageAdministratie.Facade.ViewModels
@model OnderhoudsopdrachtViewModel
@{
    ViewData["Title"] = "Onderhoudsopdracht toevoegen";
}
<div class="row">
    <div class="col-md-12">
        @{ string feedbackMessage = (string)@ViewData["FeedbackMessage"]; }
        @if (feedbackMessage != null && feedbackMessage.Length > 0)
        {
        <div class="alert alert-warning">
            <strong>Waarschuwing</strong> @feedbackMessage 
        </div>
        }
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <h2>Onderhoudsopdracht toevoegen</h2>
        <p>Vul de benodigde gegevens in om een onderhoudsopdracht toe te voegen.</p>
        <form asp-controller="Onderhoudsopdrachten" asp-action="SendOnderhoudsopdracht" class="form" method="post">
            <div class="form-group">
                @Html.LabelFor(m => m.BestuurderNaam)
                <input type="text" id="bestuuderNaam" name="BestuurderNaam" class="form-control" value="@Model.BestuurderNaam">
                <span asp-validation-for="BestuurderNaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.TelefoonNrBestuurder)
                <input type="text"  id="telefoonNrBestuurder" name="TelefoonNrBestuurder" class="form-control" min="0" value="@Model.TelefoonNrBestuurder">
                <span asp-validation-for="TelefoonNrBestuurder" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Kenteken)
                <input type="text" id="kenteken" name="Kenteken" class="form-control" value="@Model.Kenteken">
                <span asp-validation-for="Kenteken" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Kilometerstand)
                <input type="number" id="kilometerstand" name="Kilometerstand" class="form-control" min="0" value="@Model.Kilometerstand">
                <span asp-validation-for="Kilometerstand" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.OnderhoudOmschrijving)
                <textarea id="onderhoudOmschrijving" name="OnderhoudOmschrijving" class="form-control">@Model.OnderhoudOmschrijving</textarea>
                <span asp-validation-for="OnderhoudOmschrijving" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>
                    @Html.DisplayNameFor(m => m.IsAPKKeuring)
                    @Html.CheckBoxFor(m => m.IsAPKKeuring)
                </label>
            <span asp-validation-for="IsAPKKeuring" class="text-danger"></span>
</div>
            <button type="submit" class="btn btn-default">Toevoegen</button>
        </form>
    </div>
</div>
