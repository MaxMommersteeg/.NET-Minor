@using Case2.MaRoWo.GarageAdministratie.Facade.ViewModels
@model ApkAanvraagViewModel
@{
    ViewData["Title"] = "APK Keuring invoeren";
}
<div class="row">
    <div class="col-md-12">
        @{ string feedbackMessage = (string)@ViewData["FeedbackMessage"]; }
        @if (feedbackMessage != null && feedbackMessage.Length > 0)
        {
        <div class="alert alert-warning">
            <strong>Waarschuwing</strong> @feedbackMessage 
        </div>
        }
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <h2>APK Keuring aanvragen</h2>
        <p>De keuringsdatum is datum waarop u dit formulier verstuurd.</p>
        <form asp-controller="Apk" asp-action="SendApkAanvraag" class="form" method="post">
            @Html.HiddenFor(x => x.OndehoudsopdrachtId)
            <div class="form-group">
                @Html.LabelFor(x => x.VoertuigType)
                <select id="voertuigType" class="form-control" name="VoertuigType" asp-items="@(new SelectList(Model.VoertuigTypes))">
                </select>
                <span asp-validation-for="VoertuigType" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Kenteken)
                <input type="text" id="kenteken" name="Kenteken" class="form-control" value="@Model.Kenteken" readonly>
                <span asp-validation-for="Kenteken" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Kilometerstand)
                <input type="number" id="kilometerstand" name="Kilometerstand" class="form-control" min="0" value="@Model.Kilometerstand" readonly>
                <span asp-validation-for="Kilometerstand" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.EigenaarAuto)
                <input type="text" id="eigenaarAuto" name="EigenaarAuto" class="form-control" value="@Model.EigenaarAuto">
                <span asp-validation-for="EigenaarAuto" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Aanvragen</button>
        </form>
    </div>
</div>
